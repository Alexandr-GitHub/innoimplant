extends ../../layouts/html

block CONTENT
    - var THEMES = ['green', 'red', 'black', 'white'];
    - var VARIANTS = ['filled', 'outline', 'transparent'];
    - var STATUS = ['isDefault', 'isHover', 'isFocus', 'isDisabled'];
    - var SIZES = ['large', 'medium', 'small'];
    - var TEXT = 'Текст кнопки'

    style.
        body {height: 100vh; height: 100dvh; overflow: hidden;}

    div(style={
        'display': 'block',
        'width': 'auto',
        'height': 'auto',
        'background-color': '#f0f0f0',
        'padding': '80px',
        'position': 'fixed',
        'inset': '0',
        'overflow': 'auto',
        'z-index': '9999'
    }): div(style={
        'display': 'flex',
        'flex-direction': 'column',
        'justify-content': 'center',
        'align-items': 'center',
        'gap': '80px',
        'width': '100%',
        'height': 'auto',
        'min-height': '100%',
    })
        div(style={
            'display': 'grid',
            'grid-template-columns': `repeat(${THEMES.length * VARIANTS.length}, 1fr)`,
            'gap': '20px',
            'zoom': '.65',
        })
            each theme in THEMES
                each variant in VARIANTS
                    div(style={
                        'display': 'flex',
                        'flex-direction': 'column',
                        'justify-content': 'flex-start',
                        'align-items': 'center',
                        'gap': '20px',
                    })      
                        each status in STATUS
                            each size in SIZES
                                +button({ theme, variant, size, iconLeft: 'copy-simple', iconRight: 'copy-simple', [status]: true })!=TEXT

        div(style={
            'display': 'grid',
            'grid-template-columns': `repeat(${THEMES.length * VARIANTS.length}, 1fr)`,
            'gap': '20px',
            'zoom': '1',
        })
            each theme in THEMES
                each variant in VARIANTS
                    div(style={
                        'display': 'flex',
                        'flex-direction': 'column',
                        'justify-content': 'flex-start',
                        'align-items': 'center',
                        'gap': '20px',
                    })      
                        each status in STATUS
                            each size in SIZES
                                +button({ theme, variant, size, iconLeft: 'copy-simple', [status]: true, isOnlyIcon: true })